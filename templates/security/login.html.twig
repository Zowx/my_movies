{% extends 'base.html.twig' %}

{% block title %}Conexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="text-center">
            <h1 class="h3 mb-3 font-weight-normal">Connectez vous</h1>
            <p>Premi√®re visite sur le site? <a href="{{ path('app_signup') }}" class="text-decoration-underline text-dark">S'inscrire</a></p>
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control col-md-6 mx-auto" autocomplete="email" required autofocus>
            <label for="password">Mots de passe</label>
            <input type="password" name="_password" id="password" class="form-control col-md-6 mx-auto" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

            <button class="btn btn-lg mt-4 p-5 mx-auto col-md-6 btn-black" type="submit">
                Connexion
            </button>
        </div>
    </form>
{% endblock %}
